<odoo>
    <record id="client_server_tree_view" model="ir.ui.view">
        <field name="name">client.server.tree</field>
        <field name="model">client.server</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="hostname"/>
                <field name="hosting_partner_id"/>
            </tree>
        </field>
    </record>

    <record id="client_server_form_view" model="ir.ui.view">
        <field name="name">client.server.form</field>
        <field name="model">client.server</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="hostname"/>
                    <field name="hosting_partner_id"/>
                    <field name="database_ids" widget="one2many_list">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="url"/>
                            <field name="db_type"/>
                            <field name="is_active"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="client_database_form_view" model="ir.ui.view">
        <field name="name">client.database.form</field>
        <field name="model">client.database</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="url"/>
                    <field name="server_id"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_client_servers" model="ir.actions.act_window">
        <field name="name">Client Servers</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">client.server</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="client_server_menu" name="Client Servers"
              parent="client_database_manager_menu"
              action="action_client_servers"/>
</odoo>
