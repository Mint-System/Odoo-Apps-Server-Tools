<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_tree" model="ir.ui.view">
    <field name="name">prometheus_exporter.view_tree</field>
    <field name="model">ir.metric</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="description" />
        <field name="type" />
        <field name="model_id" />
        <field name="domain" />
        <field name="field_id" />
      </tree>
    </field>
  </record>

  <record id="view_form" model="ir.ui.view">
    <field name="name">prometheus_exporter.view_form</field>
    <field name="model">ir.metric</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="description" />
            <field name="type" />
            <field name="model_id" />
            <field name="model" invisible="1" />
            <field name="domain" widget="domain" options="{'model': 'model'}" />
            <field name="field_id" />
            <field name="operation" attrs="{'invisible': [('field_id', '=', False)]}" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="ir_metric_act" model="ir.actions.act_window">
    <field name="name">Metrics</field>
    <field name="res_model">ir.metric</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem name="Metrics" id="menu_ir_metric" action="ir_metric_act" parent="resource.menu_resource_config" sequence="15" />

</odoo>
